#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

/ {
    combos {
        compatible = "zmk,combos";

        bt_clear {
            bindings = <&bt BT_CLR>;
            key-positions = <28 29>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        layer_0 {
            bindings = <
&trans  &trans            &trans        &trans        &trans             &trans                                                           &trans     &trans  &trans     &trans           &trans                &trans
&trans  &kp Q             &kp W         &kp E         &kp R              &kp T                                                            &kp Y      &kp U   &kp I      &kp O            &kp P                 &trans
&trans  &kp A             &kp S         &kp D         &kp F              &kp G                             &trans      &trans             &kp H      &kp J   &kp K      &kp L            &kp LS(EQUAL)         &trans
&trans  &mt LEFT_SHIFT Z  &kp X         &kp C         &kp V              &mt CAPSLOCK LANG_ZENKAKUHANKAKU  &kp ESCAPE  &kp B              &kp N      &kp M   &kp COMMA  &kp DOT          &mt RIGHT_SHIFT FSLH  &trans
&trans  &kp LCTRL         &kp LEFT_ALT  &kp LEFT_WIN  &mt LC(LSHFT) TAB  &lt 2 SPACE                       &lt 3 DEL   &kp LS(BACKSPACE)  &kp ENTER  &none   &kp RALT   &kp RIGHT_SHIFT  &mo 3                 &trans
            >;
        };

        layer_1 {
            bindings = <
&trans  &trans  &trans  &trans     &trans     &trans                  &trans  &trans     &trans     &trans  &trans  &trans
&trans  &trans  &trans  &trans     &trans     &trans                  &trans  &trans     &trans     &trans  &trans  &trans
&trans  &trans  &trans  &mkp RCLK  &mkp LCLK  &trans  &trans  &trans  &trans  &mkp LCLK  &mkp RCLK  &trans  &trans  &trans
&trans  &trans  &trans  &trans     &trans     &trans  &trans  &trans  &trans  &trans     &trans     &trans  &trans  &trans
&trans  &trans  &trans  &trans     &trans     &trans  &trans  &trans  &trans  &trans     &trans     &trans  &trans  &trans
            >;
        };

        number-and-fn {
            bindings = <
&trans  &trans        &trans        &trans        &trans        &trans                        &trans        &trans        &trans        &trans        &trans        &trans
&trans  &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &kp NUMBER_4  &kp NUMBER_5                  &kp NUMBER_6  &kp NUMBER_7  &kp NUMBER_8  &kp NUMBER_9  &kp NUMBER_0  &trans
&trans  &kp F1        &kp F2        &kp F3        &kp F4        &kp F5        &trans  &trans  &kp F6        &kp F7        &kp F8        &kp F9        &kp F10       &trans
&trans  &kp F11       &kp F12       &none         &none         &none         &none   &none   &none         &none         &none         &none         &none         &trans
&trans  &trans        &trans        &trans        &trans        &trans        &trans  &trans  &trans        &trans        &trans        &trans        &trans        &trans
            >;
        };

        kigou {
            bindings = <
&trans  &trans    &trans          &trans          &trans      &trans                               &trans         &trans            &trans             &trans                &trans                 &trans
&trans  &kp EXCL  &kp AT          &kp HASH        &kp DOLLAR  &kp PERCENT                          &kp CARET      &kp AMPERSAND     &kp ASTRK          &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &trans
&trans  &none     &none           &kp UP_ARROW    &none       &none        &trans     &trans       &kp BACKSLASH  &kp LEFT_BRACKET  &kp RIGHT_BRACKET  &kp SEMICOLON         &kp LS(EQUAL)          &trans
&trans  &none     &kp LEFT_ARROW  &kp DOWN_ARROW  &kp RIGHT   &none        &kp GRAVE  &kp LS(SQT)  &none          &none             &kp LESS_THAN      &kp GREATER_THAN      &kp SLASH              &trans
&trans  &trans    &trans          &trans          &trans      &trans       &trans     &trans       &trans         &trans            &trans             &kp RS(RIGHT_ALT)     &trans                 &trans
            >;
        };

        layer_4 {
            bindings = <
&trans  &trans          &trans          &trans           &trans  &trans                    &trans    &trans     &trans     &trans  &trans  &trans
&trans  &trans          &msc SCRL_UP    &trans           &trans  &trans                    &trans    &trans     &trans     &trans  &trans  &trans
&trans  &msc SCRL_LEFT  &msc SCRL_DOWN  &msc SCRL_RIGHT  &trans  &trans  &trans  &trans    &mkp MB3  &mkp LCLK  &mkp RCLK  &trans  &trans  &trans
&trans  &trans          &trans          &trans           &trans  &trans  &trans  &trans    &trans    &trans     &trans     &trans  &trans  &trans
&trans  &trans          &trans          &trans           &trans  &trans  &trans  &mkp MB4  &mkp MB5  &trans     &trans     &trans  &trans  &trans
            >;
